<div id="{{result._id}}"  class="display-file">
   <p><a href="{{result.url}}" download="{{result.title}}" target="_blank">{{result.title}}</a></p>
   <p>Owner: {{result.owner}}</p>
   <p>Created: {{result.createdAt}}</p>
   <p>Updated: {{result.updatedAt}}</p>
   {{#if result.tag}}
    <p>Tags: {{result.tag}}</p>
   {{/if}}

   {{#if result.publicFile}}
   <p>This file is public and can be seen by all Foxy File users.</p>
   {{else}}
   <p>This file is private, for your eyes only!</p>
   {{/if}}

  <form class="delete-single-file"><input  data-id="{{result._id}}" type="submit" value="Delete"></form>
  <button class="show-update" data-id="{{result._id}}">Update</button>
</div>
